+static char *bridge_ports(struct interface_defn_t *ifd)
+{
+	char *ports = NULL;
+	int i;
+
+	for (i = 0; i < ifd->n_options; i++) {
+		if (strstr(ifd->option[i].name, "bridge_ports")) {
+			ports = ifd->option[i].value;
+			break;
+		}
+	}
+
+	return ports;
+}
+#endif
