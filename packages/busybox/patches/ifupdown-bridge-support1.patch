+/*
+ * Opportunistic write() to /proc or /sys
+ */
+static void write_procint(int val, const char *fmt, ...)
+{
+	va_list argp;
+	char fn[120];
+        int fd;
+
+	va_start(argp, fmt);
+	vsnprintf(fn, sizeof(fn), fmt, argp);
+	fd = open(fn, O_WRONLY);
+	va_end(argp);
+
+        if (fd >= 0) {
+		(void)write(fd, &val, sizeof(val));
+		close(fd);
+	}
+}
